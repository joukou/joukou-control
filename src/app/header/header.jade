div(id="header-fixed")
  header.navbar.navbar-default(role='banner', ng-controller="HeaderCtrl", ng-show=' !hideHeader ')
    .container-seb-margin-119
      .navbar-header
        a.navbar-brand(ui-sref='home')
          span.jou Jou
          span.kou kou
        button.navbar-toggle(ng-click='showMobileNavBar=!showMobileNavBar' type="button")
          i.fa.fa-list
      nav.collapse.navbar-collapse
        ul.nav.navbar-nav.navbar-left
          li(ng-class="{ active: isActive('product') }")
            a(ui-sref='product') Product
          li(ng-class="{ active: isActive('solutions') }")
            a(ui-sref='solutions') Solutions
          li(ng-class="{ active: isActive('marketplace') }")
            a(ui-sref='marketplace') Marketplace
          li(ng-class="{ active: isActive('pricing') }")
            a(ui-sref='pricing') Pricing
        .nav.navbar-nav.navbar-right
          div(ng-show='!disableSignIn')
            div(ng-if='authenticated')
              .form-group
                button.btn.btn-link(type="button" ng-click='signout()') Sign out
              .form-group
                button.btn.btn-link(ui-sref='persona') Welcome
            div.line-height-nav(ng-if='!currentUser && !authenticated', ng-class="{ active: isActive('signin') }")
              .form-group
                 button.btn.btn-link(type="button" ng-click="signin()")
                  | Sign in with Github
          div(ng-show='disableSignIn')
            div.line-height-nav
              a.btn.btn-info(ui-sref='contact' style='width:auto !important') Contact us
