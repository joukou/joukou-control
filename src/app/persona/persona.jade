section.persona
  .container
    .row
      .col-xs-12.glyph
        h2 Persona
    .row
      .col-xs-2
        button.btn.btn-default(type='button' ng-click='createPersona()') Create Persona
      .col-xs-4
        input.form-control.input-medium(type='text' name='name' placeholder='Name' ng-model='newPersona.name')
    .row
      .col-xs-12
        table.table.table-hover
          thead
            tr
              th #
              th Name
            tbody
              tr(ng-repeat='persona in personas' ng-click='onPersonaSelected(persona)')
                td {{$index}}
                td {{persona.props.name}}