@import './variables'

@keyframes spin {
  from {transform:rotate(0deg);}
  to {transform:rotate(360deg);}
}

.noselect
  -webkit-touch-callout: none
  -webkit-user-select: none
  -khtml-user-select: none
  -moz-user-select: none
  -ms-user-select: none
  user-select: none

.graph-editor
  .md-sidenav-backdrop
    display: none
  .joukou-graph-circles-menu
    width: 300px
    background-color: black
    color: white
    position: absolute
    bottom: 0
    left: 0
    top: $navbar-height
    z-index: 10
    .content
      margin: 0 15px
      overflow: none
      .menu-content
        overflow-y: auto
      #circleSearchGroup
        margin-top: -15px
        #circleSearch
          width: 100%
        #loading-wrapper
          height: 20px
          display:flex
          justify-content:center
          flex-direction: column
          margin-left: 10px
          #loading
            border: 2px solid #4285f4
            border-top-color: transparent
            border-radius: 50%
            width:12px
            height:12px
            -webkit-animation: spin 1.1s infinite linear
            animation: spin 1.1s infinite linear


  #joukouGraphEditor
    position: absolute
    left: 0
    right: 0
    top: $navbar-height
    bottom: 0
    max-height: 100%
    height: 700px
    width: 500px
    overflow:hidden

  #left-hide-button-wrapper, #left-show-button-wrapper
    min-height: 40px

  #left-show-button-wrapper
    &.ng-hide
      opacity: 0
    color: black
    position: absolute
    z-index: 9
    top: 55px
    left: 0
    padding:15px
    background: linear-gradient(to bottom right, white, transparent 50%)
    height: 80px
    width: 300px
    transition-delay: 1s
    transition: opacity 0.4s ease-in
    pointer-events:none;
    .control-button
      pointer-events: auto

  #right-button-wrapper
    pointer-events:none;
    color: black
    position: absolute
    z-index: 9
    top: 55px
    right: 0
    padding:15px
    background: linear-gradient(to bottom left, white, transparent 50%)
    height: 80px
    width: 300px
    .control-button
      &.ng-hide
        opacity: 0
      width: 80px
      transition: opacity 0.4s ease-in
      position: absolute
      right:0
      pointer-events: auto
  .control-button
    @extend .noselect


