section.graph
  .container
    .row
      .col-xs-12.glyph
        h2 Graphs
    .row
      .col-xs-2
        button.btn.btn-default(type='button' ng-click='createGraph()') Create Graph
      .col-xs-4
        input.form-control.input-medium(type='text' name='name' placeholder='Name' ng-model='newGraph.name')
    .row
      .col-xs-12
        table.table.table-hover
          thead
            tr
              th #
              th Name
            tbody
              tr(ng-repeat='graph in graphs' ng-click='onGraphSelected(graph)')
                td {{$index}}
                td {{graph.props.name}}